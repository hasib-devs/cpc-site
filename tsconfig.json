{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@eidellev/inertia-adonisjs",
      "@adonisjs/ally",
      "@adonisjs/route-model-binding/build/adonis-typings",
      "@adonisjs/mail",
      "adonis-responsive-attachment",
      "adonis-lucid-filter",
      "@adonisjs/lucid-slugify"
    ]
  }
}
